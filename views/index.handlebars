<h1>Eat-Da-Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col" class="burger-task">
                {{#each burgers}}
                {{#unless this.devoured}}
            </div>
            <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">{{this.burger_name}}
                <button type="submit" class="btn- btn-default" id="burger-ready">DEVOUR IT</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}

        <div class="col">
            <h2>Already Devoured!</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devoured-burgers">
                {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</main>

<form action="/burgers" class="create-form" method="POST">
    <div class="form-group">
        <input type="text" id="enter-burger" name="burger_name" class="form-control">
    </div>
    <button type="submit" class="btn btn-default" id="submit_burger">Add Your Delicious Burger!</button>
</form>